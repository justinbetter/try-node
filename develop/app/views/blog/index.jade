extends layout


block content
    each post in Posts
        div.post
            h3.post-title
                = post.title
            div.post-content
                = post.slug
            div.post-meta
                span.post-created
                    发布时间
                    = post.created
                span.post-author
                    作者
                    = post.author.name
                span.post-category
                    分类
                    = post.category.title
                span.post-comment
                    评论
                    = post.comment.length
                span.post-favorite
                    被赞
                    = post.meta.favorite
                span.post-link
                    a(href="/posts/view/"+post._id,target="_blank")查看全文





